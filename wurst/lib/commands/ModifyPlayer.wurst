package ModifyPlayer

// Third-party imports:
import Toolkit
import LocalObjectIDs

init

    // Research medallion of courage upgrade
    registerToolkitCommand("enamedal") (triggerPlayer, arguments) ->
        SetPlayerTechResearched(triggerPlayer, UPGD_MEDALLION_COURAGE, 1)

    // Unresearch medallion of courage upgrade
    registerToolkitCommand("dismedal") (triggerPlayer, arguments) ->
        SetPlayerTechResearched(triggerPlayer, UPGD_MEDALLION_COURAGE, 0)
