{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "itt.compile",
            "type": "shell",
            "command": "powershell -ExecutionPolicy ByPass -File ./compile.ps1",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "itt.debug",
            "type": "shell",
            "command": "powershell -ExecutionPolicy ByPass -File compile.ps1 --debug",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "itt.docker",
            "type": "shell",
            "command": "docker-compose run itt",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        }
    ]
}
