constant ABILITY_BASIC_SHIELD_BLOCK_ID = compiletime(ABIL_ID_GEN.next())
constant ABILITY_BONE_SHIELD_BLOCK_ID  = compiletime(ABIL_ID_GEN.next())
constant ABILITY_IRON_SHIELD_BLOCK_ID  = compiletime(ABIL_ID_GEN.next())
