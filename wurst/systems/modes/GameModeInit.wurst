        udg_FAST_MODE = false
        mode.message("Slow mode".color(COLOR_COAL) + " has been enabled. Less items spawn at once.")

    new GameMode("lower-food-limit", "lfl", "Hard", "Lower spawn rate for animals on the map") (mode, args) ->
