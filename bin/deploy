#!/bin/bash

set -ex

VERSION=$(ls _build/Island\ Troll\ Tribes\ v*.w3x | tail -n 1)
scp "$VERSION" nyc.host.islandtrolltribes.com:~twgb-host/config/maps/

./bin/changelog > ~/twgb-website/app/assets/changelog.md
cd ../twgb-website
git commit -am "Changelog for '$VERSION'"
git push
git push heroku
cd -
