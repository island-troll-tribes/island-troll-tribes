package SelectHero

// Standard library imports:
import AbilityObjEditing

// Local imports:
import LocalAssets

// Used for item shops that do not display a swap icon or unit indicator.
@compiletime function createUnitSelection()
    new AbilityDefinitionNeutralBuilding(LocalAbilityIds.selectHero)
        ..presetShowSelectUnitButton(lvl -> false)
        ..presetShowUnitIndicator(lvl -> false)
