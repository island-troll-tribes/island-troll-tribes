package MixingPotB

import Building
import ID

constant let SPELL_MIX_HERB = 'A05A'

public class MixingPot extends Building
    private static let unitTypeId = UNIT_POT

    static function initialize()
        register(unitTypeId, building -> new MixingPot(building))

    construct(unit whichUnit)
        super(whichUnit)

    override function getTypeId() returns int
        return unitTypeId

    override function postCreate()
        super.postCreate()

        getUnit().addAbility(SPELL_QM_HEALING_POTION)
        getUnit().addAbility(SPELL_MIX_HERB)
        getUnit().addAbility(SPELL_QM_MANA_POTION)
        getUnit().addAbility(SPELL_QM_CURE_ALL)
        getUnit().addAbility(SPELL_QM_ANTI_MAGIC_POTION)
        getUnit().addAbility(SPELL_QM_ANABOLIC_POTION)
        getUnit().addAbility(SPELL_QM_ORACLE_POTION)
        getUnit().addAbility(SPELL_QM_SPIRIT_WIND)
        getUnit().addAbility(SPELL_QM_SPIRIT_WATER)
        getUnit().addAbility(SPELL_QM_DARK_ROCK)
        getUnit().addAbility(SPELL_MIXING_POT_SPELLBOOK_ID)

init
    MixingPot.initialize()
