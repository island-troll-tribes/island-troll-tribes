constant HAWK_ABIL = "Awan,AInv,ANtr" // Wander, inventory, true sight neutral
constant HAWK_HATCHLING_ABIL = "S00E,A03T,A03V,A03W,A03U,A03S" // Dark Hatch transmute, owl gathering radius, owl health, owl inventory, owl movement radius, owl speed
constant TAMED_HAWK_ABIL = "S00F,A03T,A03V,A03W,A03U,A03S" // Dark Mid transmute, owl gathering radius, owl health, owl inventory, owl movement radius, owl speed // Dark Hatch transmute, owl gathering radius, owl health, owl inventory, owl movement radius, owl speed
constant ALPHA_HAWK_ABIL = "S00G,A03T,A03V,A03W,A03U,A03S" // Dark High transmute, owl gathering radius, owl health, owl inventory, owl movement radius, owl speed

constant NETHER_HATCHING_ABIL = "A03T,A03V,A03W,A03U,A03S" // owl gathering radius, owl health, owl inventory, owl movement radius, owl speed
constant NETHER_DRAKE_ABIL = "A05R,A03T,A03V,A03W,A03U,A03S" // Tele gather (hawk), owl gathering radius, owl health, owl inventory, owl movement radius, owl speed
constant GREATER_NETHER_DRAKE_ABIL = "A05R,A03T,A03V,A03W,A03U,A03S" // Tele gather (hawk), owl gathering radius, owl health, owl inventory, owl movement radius, owl speed

class HawkDefinition extends UnitDefinition
    construct(int unitId)
        super(unitId, UnitIds.wareagle1)
        this.setNormalAbilities(HAWK_ABIL)
        this.setUpgradesUsed("")
        this.setScalingValue(1)
        this.setMovementHeight(450)
        this.setMovementHeightMinimum(50)
        this.setSpeedBase(400)
        this.setGoldBountyAwardedBase(0)
        this.setGoldBountyAwardedNumberofDice(0)
        this.setGoldBountyAwardedSidesperDie(0)
        this.setHitPointsMaximumBase(135)
        this.setSightRadiusDay(75)
        this.setSightRadiusNight(75)
        this.setLevel(5)
        this.setHitPointsRegenerationType("")
        this.setNameEditorSuffix("(Wurst)")

// Hatchling
