package PetSpiritLink

// Standard Library Imports:
import AbilityObjEditing
import ObjectIds

// Local Imports:
import LocalObjectIDs

class PetSpiritLink extends AbilityDefinitionSpiritLink
    construct(int newAbilityId)
        super(newAbilityId)
        this
            ..setMaximumNumberofTargets(1, 2)
            ..setCastRange(1, 10000)
            ..setTargetsAllowed(1, commaList(
                TargetsAllowed.playerunits,
                TargetsAllowed.organic
            ))

@compiletime function createPetSpiritLink()
    new PetSpiritLink(ABILITY_PET_SPIRIT_LINK)
