        udg_STAT_LOWER_INTERVAL = 2.30
        mode.message("Panic mode".color(COLOR_COAL) + " has been enabled. Stats degrade faster now.")

    new GameMode("double", "db", "Hard", "Stats degrade twice as fast", false) (mode, args) ->
