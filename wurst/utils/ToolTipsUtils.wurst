public function makeToolTipCooldown(real COOLDOWN) returns string
    let toolTip = " Has {0} seconds cooldown.".format(COOLDOWN.toToolTipLightBlue())
    return toolTip

public function makeToolTipDuration(real DURATION, real COOLDOWN) returns string
    let toolTip = " Lasts {0} seconds, has {1} seconds cooldown.".format(DURATION.toToolTipLightBlue(), COOLDOWN.toToolTipLightBlue())
    return toolTip

public function makeToolTipDuration(real DURATION_HERO, real DURATION_NORMAL, real COOLDOWN) returns string
    let toolTip = " Lasts {0}({1}) seconds, has {2} seconds cooldown.".format(DURATION_HERO.toToolTipLightBlue(), DURATION_NORMAL.toToolTipLightBlue(), COOLDOWN.toToolTipLightBlue())
    return toolTip

